<%= simple_form_for restaurant do |f| %>
  <%= f.input :name, label: "Restaurant Name", required: true,
      input_html: { class: "form-control" }
  %>
  <%= f.input :address, label: "Address", required: true,
      input_html: { class: "form-control" }
  %>
  <%= f.input :phone_number, label: "Phone Number",
      input_html: { class: "form-control" }
  %>
  <%= f.input :category, label: "Category",
      collection: ["chinese", "italian", "japanese", "french", "belgian"],
      required: true,
      input_html: { class: "form-control" } %>

  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>



